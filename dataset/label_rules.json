{
  "version": "1.0.0",
  "meta": {
    "angle_unit": "deg",
    "coord_system": "unity",
    "interval": "[min,max)",
    "normalize": "wrap180",
    "on_out_of_range": "error"
  },
  "rules": [
    {
      "id": "hip_x",
      "joints": ["left_hip", "right_hip"],
      "axis": "x",
      "bins": [
        { "min": -180.0, "max": -20.0, "label": -1 },
        { "min": -20.0,  "max": 10.0,  "label": 0 },
        { "min": 10.0,   "max": 180.0,  "label": 1 }
      ]
    },
    {
      "id": "right_hip_z",
      "joints": ["right_hip"],
      "axis": "z",
      "bins": [
        { "min": -180.0,  "max": 20.0,  "label": 0 },
        { "min": 20.0,   "max": 180.0,  "label": 1 }
      ]
    },
    {
      "id": "left_hip_z",
      "joints": ["left_hip"],
      "axis": "z",
      "bins": [
        { "min": -20.0,  "max": 180.0,  "label": 0 },
        { "min": -180.0,   "max": -20.0,  "label": 1 }
      ]
    },
    {
      "id": "knee_x",
      "joints": ["left_knee", "right_knee"],
      "axis": "x",
      "bins": [
        { "min": -180.0,  "max": 25.0,  "label": 0 },
        { "min": 25.0, "max": 180.0, "label": 1 }
      ]
    },
    {
      "id": "shoulder_x",
      "joints": ["left_shoulder", "right_shoulder"],
      "axis": "x",
      "bins": [
        { "min": 20.0, "max": 180.0, "label": -1 },
        { "min": -20.0,  "max": 20.0,  "label": 0 },
        { "min": -180.0,   "max": -20.0,  "label": 1 }
      ]
    },
        {
      "id": "right_shoulder_z",
      "joints": ["right_shoulder"],
      "axis": "z",
      "bins": [
        { "min": 10.0, "max": 180.0, "label": -1 },
        { "min": -70.0,  "max": 10.0,  "label": 0 },
        { "min": -180.0,   "max": -70.0,  "label": 1 }
      ]
    },
    {
      "id": "left_shoulder_z",
      "joints": ["left_shoulder"],
      "axis": "z",
      "bins": [
        { "min": -180.0, "max": -10.0, "label": -1 },
        { "min": -10.0,  "max": 70.0,  "label": 0 },
        { "min": 70.0,   "max": 180.0,  "label": 1 }
      ]
    },
    {
      "id": "elbow_y",
      "joints": ["left_elbow", "right_elbow"],
      "axis": "y",
      "bins": [
        { "min": -180.0,  "max": 25.0,  "label": 0 },
        { "min": 25.0, "max": 180.0, "label": 1 }
      ]
    }
  ]
}